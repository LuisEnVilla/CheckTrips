extends layout

block content
  include header
  include share
  #map(style='background-image: url(/images/fondo1.jpg)')
  .container#main
    .row
      .col-md-8.col-md-offset-2
        .card
          .details-title  #{Funcionario.Nombre.Nombres} #{Funcionario.Nombre.ApellidoP}  #{Funcionario.Nombre.ApellidoM}
          hr.divider
          .card-content
            .row
              .col-md-6
                dl.dl-horizontal
                  dt  Puesto: 
                  dd  #{Funcionario.Trabajo.Puesto}
                  dt  Clave:
                  dd  #{Funcionario.Trabajo.Clave}
              .col-md-6
                dl.dl-horizontal
                  dt  Cargo: 
                  dd  #{Funcionario.Trabajo.Cargo}
                  dt Cargo Superiro:
                  dd  #{Funcionario.Trabajo.CargoSuperior}
                dl.dl-horizontal
                  dt  Unidad Administrativa:
                  dd  #{Funcionario.Trabajo.UnidadAdministrativa}
    .row
      .col-md-8.col-md-offset-2
        .card
          .row
            .col-md-12
              .chart#chartFuncionario
    .row
      .col-md-8.col-md-offset-2
        .card
          .row
            .col-md-12
              table.table-responsive.table-striped.table
                thead
                  tr
                    th Fecha Viaje
                    th Destino
                    th Pasaje
                    th Hospedaje
                    th Viaticos
                    th Total
                tbody
                  each val in viajes
                    tr
                      td: a(href = "/profile/" + val._id) #{val.FechaInicio} - #{val.FechaFin}
                      td #{val.Destino.Estado}
                      td $ #{val.GastoPasaje}
                      td $ #{val.CostoHospedaje}
                      td $ #{val.GastosViaticos}
                      td $ #{val.GastosViaticos + val.GastoPasaje + val.CostoHospedaje}
    .row
      .col-md-8.col-md-offset-2
        .card
          .details-title  Contacto
          hr.divider
          .card-content
            dl.dl-horizontal
              dt  E-Mail:
              dd  #{Funcionario.Correo}
              dt  Facebook:
              dd: a(href="https://www.facebook.com/") NameFacebook
              dt Twitter:
              dd: a(href="https://twitter.com/") NameTwitter
  script(src="/javascripts/highcharts.js")
  script.
    $(function () {$('#chartFuncionario').highcharts(#{grafica});});
  script(src='/javascripts/button.js')
  include ./footer